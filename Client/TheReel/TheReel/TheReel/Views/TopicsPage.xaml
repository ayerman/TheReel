<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:TheReel.Views.Imagebutton;assembly=TheReel"
             x:Class="TheReel.TopicsPage">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="50"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="50"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="50"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="50"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="50"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <Button Grid.Column="1" Grid.Row="1" Text="{Binding TopicOneName}"></Button>
    <Image Grid.Column="1" Grid.Row="3" Source="icon.png" WidthRequest="300" HeightRequest="200"/>
    <Button Grid.Column="1" Grid.Row="3" BackgroundColor="Transparent" Text="{Binding TopicTwoName}" TextColor="Black" Clicked="TextClick"></Button>
    <Button Grid.Column="1" Grid.Row="5" Text="{Binding TopicThreeName}"></Button>
  </Grid>
</ContentPage>